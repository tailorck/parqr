{
    "manifest_version": 2,

    "name": "PARQR",
    "description": "This extension finds posts in a Piazza class that are similar to the question you are about to post",
    "version": "1.1",

    "browser_action": {
	"default_icon": "parqr.png",
	"default_popup": "parqr.html"
    },

    "permissions": [
	"activeTab",
	"http://ec2-54-227-24-100.compute-1.amazonaws.com/*"
    ],

    "background": {
	"scripts": ["background.js"],
	"persistent": false
    },

    "content_scripts": [
	{
	    "matches": ["*://*.piazza.com/class/*"],
	    "js": ["js/jquery-3.2.0.min.js", "content.js"],
	    "css": ["css/buttons.css", "css/parqr.css"],
	    "run_at": "document_end"
	}
    ]
}
